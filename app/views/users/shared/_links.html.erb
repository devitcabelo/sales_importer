<%- if controller_name != 'sessions' %>
  <%= link_to t('session.login'), new_session_path(resource_name), class: 'row m-0' %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('registration.sign_up'), new_registration_path(resource_name), class: 'row m-0' %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('session.forgot_password'), new_password_path(resource_name), class: 'row m-0' %>
<% end %>

<%- if devise_mapping.omniauthable? %>
    <%= link_to t("registration.login_with_google"), user_google_oauth2_omniauth_authorize_path, method: :post, class: 'row m-0' %>
<% end %>