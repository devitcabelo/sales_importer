<div class="container d-flex justify-content-center">
  <div class="card login">
    <div class="card-header">
      <h2><%=t('session.login')%></h2>
    </div>
    <div class="card-body">
      <%= form_with model: resource, url: session_path(resource_name) do |f| %>
        <div class="field">
          <%= f.label t('session.email') %><br />
          <div class="input-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
        </div>

        <div class="field">
          <%= f.label t('session.password') %><br />
          <div class="input-group">
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="form-check mt-2">  
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label t('session.remember_me'), class: 'form-check-label' %>
            </div>
          </div>
        <% end %>
        
        <div class="mt-2">
          <%= render "shared/flashes" %>
        </div>
        
        <div class="actions text-center">
          <%= f.submit t('session.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
