<h2><%=t('registration.sign_up')%></h2>

<%= form_with model: resource, url: registration_path(resource_name) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label t('registration.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t('registration.password') %>
    <% if @minimum_password_length %>
    <em>(<%= t('registration.characters_minimum', minimum: @minimum_password_length) %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label t('registration.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('registration.sign_up') %>
  </div>
<% end %>

<%= render "users/shared/links" %>
<%= render "shared/flashes" %>

